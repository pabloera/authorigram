#PINECONE_API_KEY=pcsk_[SUA_CHAVE_PINECONE_AQUI]

# Environment settings
ENV=development  # Options: development, testing, production
# Debug mode
DEBUG=True
# Cache enabled
CACHE_ENABLED=True
